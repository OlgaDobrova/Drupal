{%
  set classes = [
    'block',
    'service-block',
    'service-block--small',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
  ]
%}
{{ attach_library('light/global-js') }}

<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  <div class="container">
    {% if label %}
      <h2>{{ label }}</h2>  
    {% endif %}
    {{ title_suffix }}
    {% block content %}
      {{ content }}
    {% endblock %}
  </div>
</div>